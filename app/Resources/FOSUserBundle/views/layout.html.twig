<!doctype html>
<html lang="en" class="no-js" style="background-color: rgba(0,0,0,0.5);">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">
        <meta name="description" content="Actarus is a custom tool for bug bounty">

        <title>Actarus is working for you!</title>

        <!-- Font awesome -->
        <link rel="stylesheet" href="{{ asset("css/font-awesome.min.css") }}">
        <!-- Sandstone Bootstrap CSS -->
        <link rel="stylesheet" href="{{ asset("css/bootstrap.min.css") }}">
        <!-- Bootstrap Datatables -->
        <link rel="stylesheet" href="{{ asset("css/dataTables.bootstrap.min.css") }}">
        <!-- Bootstrap social button library -->
        <link rel="stylesheet" href="{{ asset("css/bootstrap-social.css") }}">
        <!-- Bootstrap select -->
        <link rel="stylesheet" href="{{ asset("css/bootstrap-select.css") }}">
        <!-- Bootstrap file input -->
        <link rel="stylesheet" href="{{ asset("css/fileinput.min.css") }}">
        <!-- Awesome Bootstrap checkbox -->
        <link rel="stylesheet" href="{{ asset("css/awesome-bootstrap-checkbox.css") }}">
        <!-- Admin Stye -->
        <link rel="stylesheet" href="{{ asset("css/style.css") }}">
        <link rel="stylesheet" href="{{ asset("css/custom.css") }}">

        <script src="{{ asset("js/jquery.min.js") }}"></script>
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

        <style>
            {% block stylesheets %}
            {% endblock %}
        </style>
    </head>

    <body>
        <div class="login-page bk-img">
            <div class="form-content">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3">
                            <div class="row pt-6x">
                                <div class="col-md-8 col-md-offset-2">
                                    {% block fos_user_content %}{% endblock %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Loading Scripts -->
        <script src="{{ asset("js/bootstrap-select.min.js") }}"></script>
        <script src="{{ asset("js/bootstrap.min.js") }}"></script>
        <script src="{{ asset("js/main.js") }}"></script>

        {% block javascripts %}
        {% endblock %}
    </body>
</html>
