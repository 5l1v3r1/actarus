{% extends 'base.html.twig' %}


{% block body %}
	<div style="display:none;" class="modal fade" id="modalExport" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	    <div class="modal-dialog" role="document">
	        <div class="modal-content">
	            <div class="modal-header">
	                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
	                <h4 class="modal-title" id="myModalLabel">Select the fields to export</h4>
	            </div>
	            <div class="modal-body">
	            	{{ form_start(export_form,{'attr':{'class':'form-horizontal'}}) }}
		            	{{ form_widget(export_form.id,{'attr':{'style':'display:none;'}}) }}
		            	{{ form_widget(export_form.name,{'attr':{'style':'display:none;'}}) }}
		            	{{ form_widget(export_form.alias,{'attr':{'style':'display:none;'}}) }}
		            	{{ form_widget(export_form.service,{'attr':{'style':'display:none;'}}) }}
		            	{{ form_widget(export_form.project,{'attr':{'style':'display:none;'}}) }}
		            	{{ form_widget(export_form.min_created_at,{'attr':{'style':'display:none;'}}) }}
		            	{{ form_widget(export_form.max_created_at,{'attr':{'style':'display:none;'}}) }}
		            	{{ form_widget(export_form.status,{'attr':{'style':'display:none;'}}) }}
            			<div class="row">
	            			<div class="col-md-6">
	                            <div class="form-group">
	                                <div class="col-sm-1">
	                                    {{ form_widget(export_form.export_id,{'attr':{'class':'form-control'}}) }}
	                                </div>
	                                {{ form_label(export_form.export_id,'Id',{'label_attr':{'class':'col-sm-10 control-label'}}) }}
	                            </div>
	                            <div class="form-group">
	                                <div class="col-sm-1">
	                                    {{ form_widget(export_form.export_name,{'attr':{'class':'form-control'}}) }}
	                                </div>
	                                {{ form_label(export_form.export_name,'IP',{'label_attr':{'class':'col-sm-10 control-label'}}) }}
	                            </div>
	                            <div class="form-group">
	                                <div class="col-sm-1">
	                                    {{ form_widget(export_form.export_alias,{'attr':{'class':'form-control'}}) }}
	                                </div>
	                                {{ form_label(export_form.export_alias,'Alias',{'label_attr':{'class':'col-sm-10 control-label'}}) }}
	                            </div>
	                        </div>
	            			<div class="col-md-6">
	                            <div class="form-group">
	                                <div class="col-sm-1">
	                                    {{ form_widget(export_form.export_project,{'attr':{'class':'form-control'}}) }}
	                                </div>
	                                {{ form_label(export_form.export_project,'Project',{'label_attr':{'class':'col-sm-10 control-label'}}) }}
	                            </div>
	                            <div class="form-group">
	                                <div class="col-sm-1">
	                                    {{ form_widget(export_form.export_created_at,{'attr':{'class':'form-control'}}) }}
	                                </div>
	                                {{ form_label(export_form.export_created_at,'Created date',{'label_attr':{'class':'col-sm-10 control-label'}}) }}
	                            </div>
	                            <div class="form-group">
	                                <div class="col-sm-1">&nbsp;</div>
	                                <label>&nbsp;</label>
	                            </div>
		            		</div>
	            		</div>
	            		<div class="row">
	            			<div class="col-md-12">
		            			{{ form_widget(export_form.export_full) }}
	            			</div>
	            		</div>
					{{ form_end(export_form) }}
	            </div>
	            <div class="modal-footer">
	                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
	                <button type="button" class="btn btn-primary" id="confirm-save">Export</button>
	            </div>
	        </div>
	    </div>
	</div>
	
    <div class="mod mod-server">
        <a href="{{ url('server_add') }}" class="btn btn-success pull-right">Add server</a>
        <h2 class="page-title">Server managment</h2>

        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-default">
                    <!-- <div class="panel-heading">
                        Search server
                    </div> -->
                    <div class="panel-body well">
                        {{ form_start(search_form,{'attr':{'class':'form-horizontal'}}) }}
                        {{ form_row(search_form._token) }}
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(search_form.id,'Id',{'label_attr':{'class':'col-sm-2 control-label'}}) }}
                                <div class="col-sm-10">
                                    {{ form_widget(search_form.id,{'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(search_form.name,'IP',{'label_attr':{'class':'col-sm-2 control-label'}}) }}
                                <div class="col-sm-10">
                                    {{ form_widget(search_form.name,{'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(search_form.alias,'Alias',{'label_attr':{'class':'col-sm-2 control-label'}}) }}
                                <div class="col-sm-10">
                                    {{ form_widget(search_form.alias,{'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(search_form.service,'Service',{'label_attr':{'class':'col-sm-2 control-label'}}) }}
                                <div class="col-sm-10">
                                    {{ form_widget(search_form.service,{'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(search_form.project,'Project',{'label_attr':{'class':'col-sm-2 control-label'}}) }}
                                <div class="col-sm-10">
                                    {{ form_widget(search_form.project,{'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(search_form.status,'Status',{'label_attr':{'class':'col-sm-2 control-label'}}) }}
                                <div class="col-sm-10">
                                    {{ form_widget(search_form.status,{'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label"></label>
                                <div class="col-sm-3">
                                    {{ form_widget(search_form.min_created_at,{'attr':{'class':'form-control datetimepicker'}}) }}
                                </div>
                                <label class="col-sm-4 control-label" style="text-align:center;">&lt;&nbsp;&nbsp;&nbsp;Created at&nbsp;&nbsp;&nbsp;&lt;</label>
                                <div class="col-sm-3">
                                    {{ form_widget(search_form.max_created_at,{'attr':{'class':'form-control datetimepicker'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 text-right">
                            <input type="submit" value="Search" class="btn btn-primary" />
                        </div>
                        {{ form_end(search_form) }}
                    </div>
                </div>
            </div>
        </div>

        {% if t_server|length %}
            {{ pagination|raw }}

            <div class="row">
                <div class="col-sm-12">
                    <table id="zctb" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th width="70" style="text-align:center;">#</th>
                            <th width="200">Project</th>
                            <th width="200">IP</th>
                            <th>Alias</th>
                            <th>Open ports</th>
                            <th>Technologies</th>
                            <th width="80" style="text-align:center;">Hosts</th>
                            <th width="170" style="text-align:center;">Created date</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for s in t_server %}
                                {% set class =  'server_status_' ~ t_status[s.getStatus()]|replace({' ':'_'}) %}
                                <tr class="{{ class }}">
                                    <td align="right"><a href="{{ path('server_show', { 'id': s.getId() }) }}" class="{{ class }}">{{ s.getId() }}</a></td>
                                    <td><a href="{{ path('project_show', { 'id': s.getProject().getId() }) }}" class="text-default">{{ s.getProject().getName()|capitalize }}</a></td>
                                    <td>
		                                {% if s.getMaxAlertLevel()[0] >= 0 %}
		                                    {% if s.getMaxAlertLevel()[1] == 0 %}
		                                   		{% set aclass = 'fa-bell-o' %}
		                                    {% else %}
		                                   		{% set aclass = 'fa-bell' %}
		                                    {% endif %}
		                                {% else %}
		                               		{% set aclass = 'alert-none' %}
		                                {% endif %}
		                                {% set aclass = aclass~' alert_level_'~s.getMaxAlertLevel()[0] %}
		                                <i class="fa {{ aclass }}"></i>
                                        <a href="{{ path('server_show', { 'id': s.getId() }) }}" class="{{ class }}">{{ s.getName() }}</a>
                                    </td>
                                    <td>{{ s.getAlias()|default('-') }}</td>
                                    <td>
                                    	{% for s in s.getServices() %}
                                    		{{ s.getPort() }}/{{ s.getType() }} ({{ s.getService() }}),
                                    	{% endfor %}
	                                </td>
                                    <td>{{ s.getEntityTechnologies()|raw }}</td>
                                    <td align="center">{{ s.getHostServers()|length }}</td>
                                    <td align="center">{% if s.getCreatedAt() %}{{ s.getCreatedAt()|date('d/m/Y H:i:s') }}{% endif %}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            {{ pagination|raw }}
        {% else %}
            <div class="text-danger">No result, try again.</div>
        {% endif %}
    </div>
{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/bootstrap-datetimepicker.css") }}">
    <style>
        .panel {
            overflow: inherit;
        }
        .input-group {
            float: left !important;
        }
    </style>
{% endblock %}


{% block javascripts %}
    <script src="{{ asset("js/moment.js") }}"></script>
    <script src="{{ asset("js/bootstrap-datetimepicker.js") }}"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $('#search_name').focus();
            $('.datetimepicker').datetimepicker({format: 'DD/MM/YYYY'});
            form = $('form[name="search"]');
            form.find('input[type="submit"]').on('click',function(e){
                e.preventDefault();
                p = form.find('input[name="search[page]"]');
                p.val( 1 );
                form.submit();
            });
            $('.btn-export').on('click', function(e) {
	            e.preventDefault();
	            $('#modalExport').modal();
	            $('#modalExport #confirm-save').on('click',function(e){
	                e.preventDefault();
	                f = $('#modalExport form');
	                f.submit();
	                $('#modalExport').find('.close').click();
	            });
	        });
        });
    </script>
{% endblock %}
