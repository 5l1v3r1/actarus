{% extends 'base.html.twig' %}


{% block body %}
    <div class="mod mod-requete-new">
        <a href="{{ url('requete_homepage') }}" class="btn btn-default pull-right" style="margin-right:20px;">Cancel</a>

        <h2 class="page-title">Import datas file</h2>

        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">Basic infos</div>
                    <div class="panel-body">
                        {{ form_start(form,{'attr':{'class':'form-horizontal'}}) }}
                            {{ form_row(form._token) }}
                            <div class="form-group">
                                {{ form_label(form.project,'Project *',{'label_attr':{'class':'col-sm-2 control-label'}}) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.project,{'attr':{'class':'form-control'}}) }}
                                    <span class="help-block m-b-none">{{ form_errors(form.project) }}</span>
                                </div>
                            </div>
                            <div class="hr-dashed"></div>
                            <div class="form-group">
                                {{ form_label(form.format,'Format *',{'label_attr':{'class':'col-sm-2 control-label'}}) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.format,{'attr':{'class':'form-control'}}) }}
                                    <span class="help-block m-b-none">{{ form_errors(form.format) }}</span>
                                </div>
                            </div>
                            <div class="hr-dashed"></div>
                            <div class="form-group">
                                {{ form_label(form.source_file,'File *',{'label_attr':{'class':'col-sm-2 control-label'}}) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.source_file,{'attr':{'accept':allowed_extension,'class':'form-control','placeholder':'www.example.com'}}) }}
                                    <span class="help-block m-b-none">{{ form_errors(form.source_file) }}</span>
                                </div>
                            </div>
                            <div class="hr-dashed"></div>
                            <div class="form-group">
                                <div class="col-sm-8 col-sm-offset-2">
                                    <button class="btn btn-primary" type="submit">Import</button>
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
