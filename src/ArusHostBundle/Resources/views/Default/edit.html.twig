{{ form_start(form,{'attr':{'class':'form-horizontal'}}) }}
    {{ form_row(form._token) }}
    <div class="form-group">
        <label class="col-sm-2 control-label nopadding">Id</label>
        <div class="col-sm-10">
            {{ host.getId() }} - {{ host.getEntityId() }}
        </div>
    </div>
    <div class="hr-dashed"></div>
    <div class="form-group">
        <label class="col-sm-2 control-label nopadding">Project</label>
        <div class="col-sm-10">
            <a href="{{ url('project_show',{'id':host.getProject().getId()}) }}">{{ host.getProject().getName()|capitalize }}</a>
        </div>
    </div>
    <div class="hr-dashed"></div>
    <div class="form-group">
        {{ form_label(form.name,'Name *',{'label_attr':{'class':'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.name,{'attr':{'class':'form-control'}}) }}
            <span class="help-block m-b-none">{{ form_errors(form.name) }}</span>
        </div>
    </div>
    <div class="hr-dashed"></div>
    <div class="form-group">
        <label class="col-sm-2 control-label nopadding">Domain</label>
        <div class="col-sm-10">
            <a href="{{ url('domain_show',{'id':host.getDomain().getId()}) }}">{{ host.getDomain().getName() }}</a>
        </div>
    </div>
    <div class="hr-dashed"></div>
    <div class="form-group">
        <label class="col-sm-2 control-label nopadding">Technology</label>
        <div class="col-sm-10">
            {{ techno_list|raw }}
        </div>
    </div>
    <div class="hr-dashed"></div>
    <div class="form-group">
        {{ form_label(form.status,'Status *',{'label_attr':{'class':'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.status,{'attr':{'class':'form-control'}}) }}
            <span class="help-block m-b-none">{{ form_errors(form.status) }}</span>
        </div>
    </div>
    <div class="hr-dashed"></div>
    <div class="form-group">
        <label class="col-sm-2 control-label nopadding">Created date</label>
        <div class="col-sm-10">
            {% if host.getCreatedAt() %}{{ host.getCreatedAt()|date('d/m/Y H:i:s') }}{% endif %}
        </div>
    </div>
    <div class="hr-dashed"></div>
    <div class="form-group">
        <label class="col-sm-2 control-label nopadding">Last update</label>
        <div class="col-sm-10">
            {% if host.getUpdatedAt() %}{{ host.getUpdatedAt()|date('d/m/Y H:i:s') }}{% endif %}
        </div>
    </div>
    <div class="hr-dashed"></div>
    <div class="form-group">
        <div class="col-sm-8 col-sm-offset-2">
            <button class="btn btn-primary" type="submit">Save changes</button>
            <a href="javascript:;" id="btn-view" class="btn btn-default pull-left" style="margin-right:20px;">Cancel</a>
        </div>
    </div>
{{ form_end(form) }}

<script type="text/javascript">
    $(document).ready(function(){
        $('#arus_host_edit_name').focus();

        $('#btn-view').click(function() {
            $.get( '{{ url('host_view',{'id':host.getId()}) }}', function(data) {
                $('.object-info').html( data );
            });
        });
    });
</script>
