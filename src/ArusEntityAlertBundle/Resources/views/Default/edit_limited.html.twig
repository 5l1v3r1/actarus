<div style="display:none;" class="modal fade" id="modalAlertEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                <h4 class="modal-title" id="myModalLabel">Edit an alert</h4>
            </div>
            <div class="modal-body">
                {{ form_start(alert_edit_form,{'attr':{'class':'form-horizontal'}}) }}
                    {{ form_row(alert_edit_form._token) }}
                    <div id="arus_entity_alert_level">
                        <div class="radio radio-info radio-inline col-md-3">
                            {{ form_widget(alert_edit_form.level.0) }}
                            {{ form_label(alert_edit_form.level.0) }}
                        </div>
                        <div class="radio radio-success radio-inline col-md-3">
                            {{ form_widget(alert_edit_form.level.1) }}
                            {{ form_label(alert_edit_form.level.1) }}
                        </div>
                        <div class="radio radio-warning radio-inline col-md-3">
                            {{ form_widget(alert_edit_form.level.2) }}
                            {{ form_label(alert_edit_form.level.2) }}
                        </div>
                        <div class="radio radio-danger radio-inline col-md-2">
                            {{ form_widget(alert_edit_form.level.3) }}
                            {{ form_label(alert_edit_form.level.3) }}
                        </div>
                    </div>
                    {{ form_widget(alert_edit_form.descr,{'attr':{'class':'form-control','placeholder':'Your text here...'}}) }}
                {{ form_end(alert_edit_form) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirm-save">Save</button>
            </div>
        </div>
    </div>
</div>
