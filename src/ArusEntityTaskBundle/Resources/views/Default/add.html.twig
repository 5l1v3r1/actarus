<div style="display:none;" class="modal fade" id="modalTaskAdd" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                <h4 class="modal-title" id="myModalLabel">Add a task</h4>
            </div>
            <div class="modal-body">
                {{ form_start(task_add_form,{'attr':{'class':'form-horizontal'}}) }}
                    {{ form_row(task_add_form._token) }}
                    {{ form_widget(task_add_form.entity_id,{'attr':{'value':entity.getEntityId()}}) }}
	            	<div class="row">
	            		<div class="col-md-12">
		                    <div style="margin-bottom:5px;">
		                        {{ form_widget(task_add_form.task,{'attr':{'class':'form-control'}}) }}
		                    </div>
		                    <div style="margin-bottom:5px;">
		                        {{ form_widget(task_add_form.command,{'attr':{'class':'form-control','placeholder':'Linux command here...'}}) }}
		                    </div>
		               </div>
	               </div>
	            	<div class="row">
	            		<div class="col-md-12">
		                    <div>
		                    	{{ form_label(task_add_form.priority,'Priority *',{'label_attr':{'class':'control-label','style':'float:left;'}}) }}
		                        <div class="col-sm-3">{{ form_widget(task_add_form.priority,{'attr':{'class':'form-control','value':'1'}}) }}</div>
		                    </div>
		               </div>
					</div>
                {{ form_end(task_add_form) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirm-save">Save</button>
            </div>
        </div>
    </div>
</div>
